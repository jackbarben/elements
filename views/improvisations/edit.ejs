<% layout('/layouts/boilerplate') %>



    <div class="row">
        <h1 class="text-center">Edit Improvisation</h1>
        <div class="col-6 offset-3">
            <form action="/improvisations/<%= improvisation._id%>?_method=PUT" method="POST" novalidate
                class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="improvisation[title]"
                        value="<%= improvisation.title %>" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="songUpload">Upload Improvisation</label>
                    <input class="form-control" type="file" id="image" name="songUpload" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="image">Song Image</label>
                    <input class="form-control" type="text" id="image" name="improvisation[image]"
                        value="<%= improvisation.image %>">>
                </div>

                <div class=" mb-3">
                    <label class="form-label" for="description">Song Notes</label>
                    <textarea class="form-control" type="text" id="description"
                        name="improvisation[notes]"><%= improvisation.notes %> </textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update improvisation</button>
                </div>
            </form>
            <a href="/improvisations/<%= improvisation._id %>  ">Back to Improvisation</a>
        </div>
    </div>