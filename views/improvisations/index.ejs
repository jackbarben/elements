<% layout('/layouts/boilerplate') %>
    <link rel="stylesheet" href="/css/elements.css">



    <% if(currentUser) { %>

        <h1>Improvisations</h1>

        <div>
            <a href="/improvisations/new" class="btn btn-success mb-3 mt-5 h5">Create a new improvisation</a>
        </div>

        <% for (let improvisation of improv){%>
            <div class="card">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid img-thumbnail" alt="User Image" id="user-image-index"
                            src="<%=improvisation.author.musicImage.url%>">
                    </div>
                    <div class="col-md-8">
                        <div>
                            <div class="card-body">
                                <h5 class="card-title display-4">
                                    <%= improvisation.title %>
                                </h5>
                                <h5>
                                    by <span class="italic">
                                        <%= improvisation.author.username %>
                                    </span>
                                </h5>
                            </div>
                        </div>
                        <h5>
                            <%- improvisation.notes %>
                        </h5>

                    </div>
                    <div class="card-footer text-center">

                        <a href="/improvisations/<%=improvisation._id%>" class="btn btn-primary" id="button-hover">View
                            <%=improvisation.title%>
                        </a>

                    </div>
                </div>
            </div>
            </div>
            </div>
            <% }%>


                <% } else if(!currentUser) { %>
                    <div class="container">
                        <div class="row">
                            <div class="col-12 text-center display-5 lead mt-5">Please Join Us</div>
                            <a href="/preregister" class="btn btn-success col-2 offset-5 mt-3">Preregister</a>
                        </div>
                    </div>


                    <% } %>


                        </body>

                        </html>