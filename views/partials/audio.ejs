<div id="waveform">

    <div class="player">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-2 m-0 p-0">
                    <img id="img-sizing" class="img-fluid" src="/img/mountain.jpg" alt="" />
                </div>
                <div class="col-8 m-0 p-0">
                    <div class="row">
                        <div class="col-6">
                            <div class="title lead">
                                <%= improvisation.title%> by: <%= improvisation.author.username %>
                            </div>
                            <div class="time">
                                <span id="current">0:00</span> /
                                <span id="duration">0:00</span>
                            </div>
                        </div>

                        <div class="col-1 offset-5 p-0">
                            <div class="control"></div>
                            <img id="playPause" class="img-sizing" src="/img/play.png" alt="">

                        </div>
                        <div class="col-12">
                            <div id="wave"></div>
                        </div>
                    </div>
                </div>


                <div class="info col-12 col-md-10 col-lg-8 m-0 p-0">

                </div>

            </div>


        </div>
    </div>
</div>




</div>
</div>