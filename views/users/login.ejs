<% layout('layouts/boilerplate')%>

    <link rel="stylesheet" href="/css/login.css">
    </head>

    <body class="d-flex flex-column vh-100">
        <div class="container">
            <div class="row">
                <div class="col lead text-center mb-4">This website is in currently in development! If you would like to
                    be join
                    during the
                    development phase, please send an email to register@elements.com and request an invitation to join!
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <h1 class="text-center mb-5">Login</h1>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3 text-center">
                            <label class="form-label" for="username">Music Name</label>
                            <input class="form-control" type="text" id="username" name="username" required>
                            <div class=" valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3 text-center">
                            <label class="form-label" for="password">Secret Music Code</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class=" text-center">
                            <button class="btn btn-success">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>